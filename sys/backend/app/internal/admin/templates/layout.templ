package templates

templ Base(title string) {
	<!DOCTYPE html>
	<html lang="ja">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title } - Serifu Admin</title>
			<script src="https://unpkg.com/htmx.org@1.9.10"></script>
			<script src="https://cdn.tailwindcss.com"></script>
			<link rel="stylesheet" href="/static/css/admin.css"/>
		</head>
		<body class="bg-gray-50 min-h-screen" hx-boost="true">
			{ children... }
			<script src="/static/js/admin.js"></script>
		</body>
	</html>
}

templ Layout(title string, adminName string) {
	@Base(title) {
		<div class="flex min-h-screen">
			@Sidebar(adminName)
			<main class="flex-1 ml-64">
				<div class="p-8">
					{ children... }
				</div>
			</main>
		</div>
	}
}

templ Sidebar(adminName string) {
	<aside class="fixed left-0 top-0 h-full w-64 bg-gray-900 text-white flex flex-col z-40">
		<div class="p-6 border-b border-gray-700">
			<h1 class="text-xl font-bold">Serifu Admin</h1>
			<p class="text-gray-400 text-sm mt-1">{ adminName }</p>
		</div>
		<nav class="flex-1 py-4 overflow-y-auto custom-scrollbar">
			@NavItem("/admin/", "ダッシュボード", dashboardIcon())
			@NavItem("/admin/categories", "カテゴリ", categoryIcon())
			@NavItem("/admin/quizzes", "クイズ", quizIcon())
			@NavItem("/admin/users", "ユーザー", userIcon())
			@NavItem("/admin/answers", "回答", answerIcon())
			@NavItem("/admin/comments", "コメント", commentIcon())
		</nav>
		<div class="p-4 border-t border-gray-700">
			<a href="/admin/logout" class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors text-sm">
				@logoutIcon()
				<span>ログアウト</span>
			</a>
		</div>
	</aside>
}

templ NavItem(href string, label string, icon templ.Component) {
	<a href={ templ.SafeURL(href) } class="flex items-center gap-3 px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors">
		@icon
		<span>{ label }</span>
	</a>
}

