templ PageHeader(title string) {
	<div class="mb-8">
		<h2 class="text-2xl font-bold text-gray-800">{ title }</h2>
	</div>
}

templ Alert(message string, alertType string) {
	if message != "" {
		<div class={ "alert", "mb-4 p-4 rounded-lg", alertClass(alertType) }>
			<p>{ message }</p>
		</div>
	}
}

func alertClass(alertType string) string {
	switch alertType {
	case "error":
		return "bg-red-100 text-red-700 border border-red-200"
	case "success":
		return "bg-green-100 text-green-700 border border-green-200"
	default:
		return "bg-blue-100 text-blue-700 border border-blue-200"
	}
}

templ StatusBadge(status string) {
	<span class={ "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium", statusBadgeClass(status) }>
		{ status }
	</span>
}

func statusBadgeClass(status string) string {
	switch status {
	case "active":
		return "bg-green-100 text-green-800"
	case "draft":
		return "bg-yellow-100 text-yellow-800"
	case "suspended":
		return "bg-red-100 text-red-800"
	case "moderated":
		return "bg-red-100 text-red-800"
	default:
		return "bg-gray-100 text-gray-800"
	}
}
